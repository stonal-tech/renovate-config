{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>stonal-tech/renovate-config//yaml"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "autoapprove"
            ]
        },
        {
            "matchManagers": [
                "regex"
            ],
            "matchDatasources": [
                "github-releases",
                "github-tags"
            ],
            "matchPackageNames": [
                "golangci/golangci-lint"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "autoapprove"
            ]
        }
    ],
    "regex": {
        "enabled": true
    },
    "regexManagers": [
        {
            "description": "https://regex101.com/r/ZbATUP/1",
            "fileMatch": [
                ".github/workflows/(.*).yml"
            ],
            "matchStrings": [
                "#.*https:\\/\\/github\\.com\/(?<depName>[^\\/]+\\/[^\\/]+)\\/(?<sourceType>(releases|tags)+).*\n.*version:[\\s]*(?<currentValue>.*)"
            ],
            "datasourceTemplate": "github-{{{sourceType}}}"
        }
    ]
}