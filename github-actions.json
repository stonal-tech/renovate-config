{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>stonal-tech/renovate-config//yaml"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "autoapprove"
            ]
        },
        {
            "matchManagers": [
                "regex"
            ],
            "matchDatasources": [
                "github-releases",
                "github-tags"
            ],
            "matchPackageNames": [
                "golangci/golangci-lint"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "autoapprove"
            ]
        }
    ]
}