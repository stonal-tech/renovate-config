{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "autoapprove"
            ]
        }
    ],
    "regex": {
        "enabled": true
    },
    "regexManagers": [
        {
            "fileMatch": [
                ".github/workflows/(.*).yml"
            ],
            "matchStrings": [
                "#.*https:\\/\\/github\\.com\/(?<depName>[^\\/]+\\/[^\\/]+)\\/(?<sourceType>(releases|tags)+).*\n.*version:[\\s]*(?<currentValue>.*)"
            ],
            "datasourceTemplate": "github-{{{sourceType}}}"
        }
    ]
}