{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Github actions workflow",
    "extends": [
        "github>stonal-tech/renovate-config//action"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchPackageNames": [
                "^stonal-tech/action-.*"
            ],
            "addLabels": [
                "autorelease"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchPackageNames": [
                "^stonal-tech/action-.*"
            ],
            "addLabels": [
                "autoapprove"
            ]
        }
    ]
}