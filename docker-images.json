{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchManagers": [
                "docker-compose",
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "addLabels": [
                "autoapprove"
            ]
        }
    ]
}