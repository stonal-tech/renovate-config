{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchManagers": [
                "docker-compose",
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "addLabels": [
                "autoapprove"
            ]
        },
        {
            "description": "This doesn't work üôÅ",
            "matchManagers": [
                "regex"
            ],
            "matchDatasources": [
                "github-releases",
                "github-tags"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchPackageNames": [
                "^pypa/pip$",
                "^python-poetry/poetry$",
                "^aws/aws-cli$",
                "^mikefarah/yq$",
                "^codacy/helm-ssm$",
                "^eksctl-io/eksctl$",
                "^helm/helm$",
                "^awslabs/amazon-ecr-credential-helper$"
            ],
            "automerge": "true",
            "addLabels": [
                "autoapprove"
            ]
        }
    ],
    "regex": {
        "enabled": true
    },
    "regexManagers": [
        {
            "description": "https://regex101.com/r/Bf1hmQ/1 and https://regex101.com/r/SjTpfT/1",
            "fileMatch": [
                "Dockerfile"
            ],
            "matchStrings": [
                "#.*https:\\/\\/github\\.com\/(?<depName>[^\\/]+\\/[^\\/]+)\\/(?<sourceType>(releases|tags)+).*\n(?:ENV|ARG)\\s.*_VERSION[\\s|=](?<currentValue>.*)"
            ],
            "datasourceTemplate": "github-{{{sourceType}}}"
        }
    ]
}