{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "regex": {
        "enabled": true
    },
    "regexManagers": [
        {
            "description": "https://github.com/renovatebot/renovate/issues/7751",
            "fileMatch": ["Jenkinsfile"],
            "matchStrings": ["@Library\\(['\"](?<depName>[^'\"@]+)@(?<currentValue>v?[^'\"]+)['\"]\\)"],
            "datasourceTemplate": "github-tags"
        }
    ],
    "packageRules": [
        {
            "datasources": ["github-tags"],
            "registryUrls": ["https://github.com/stonal-tech/jenkins-lib"]
        }
    ]
}