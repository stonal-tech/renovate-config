{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>stonal-tech/renovate-config//global",
        "github>stonal-tech/renovate-config//js-npm"
    ],
    "packageRules": [
        {
            "description": "Automerge any patch",
            "matchManagers": [
                "npm"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true,
            "addLabels": [
                "autoapprove"
            ],
            "prPriority": 2
        },
        {
            "description": "Internal libs have a high priority",
            "matchManagers": [
                "npm"
            ],
            "matchPackagePatterns": [
                "^@lfn/.*",
                "^@stonal/.*"
            ],
            "prPriority": 5
        },
        {
            "description": "Automerge any minor/patch update for an internal lib",
            "matchManagers": [
                "npm"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchPackagePatterns": [
                "^@lfn/.*",
                "^@stonal/.*"
            ],
            "automerge": true,
            "addLabels": [
                "autoapprove"
            ]
        },
        {
            "description": "Automerging some majors",
            "matchManagers": [
              "npm"
            ],
            "matchUpdateTypes": [
              "major",
              "minor",
              "patch"
            ],
            "matchPackagePatterns": [
              "^eslint$"
            ],
            "automerge": true,
            "addLabels": [
              "autoapprove"
            ]
          },
          {
            "description": "Automerging some minors",
            "matchManagers": [
              "npm"
            ],
            "matchUpdateTypes": [
              "minor",
              "patch"
            ],
            "matchPackagePatterns": [
              "^vite$",
              "^@vitejs/.*",
              "^@tanstack/.*",
              "^react-router(-dom)?$",
              "^@mantime/.*",
              "^@sentry/.*"
            ],
            "automerge": true,
            "addLabels": [
              "autoapprove"
            ]
          }
    ]
}