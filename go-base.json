{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "https://www.notion.so/Renovate-f455c421fc084ab38bf3145d243f7833",
    "extends": [
        "github>stonal-tech/renovate-config//global"
    ],
    "postUpdateOptions": [
        "gomodTidy"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "go"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "addLabels": [
                "autoapprove"
            ]
        },
        {
            "description": "Upgrade golang-version to minor/patch versions",
            "matchDatasources": [
                "golang-version"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "addLabels": [
                "autoapprove"
            ],
            "minimumReleaseAge": "30 days",
            "prPriority": 3
        },
        {
            "matchDatasources": [
                "go"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "matchDepNames": [
                "__to_be_defined__"
            ],
            "addLabels": [
                "autoapprove"
            ]
        },
        {
            "matchDatasources": [
                "go"
            ],
            "matchDepNames": [
                "^github.com/stonal-tech/.*"
            ],
            "prPriority": 5
        }
    ]
}