{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "regex": {
        "enabled": true
    },
    "regexManagers": [
        {
            "fileMatch": [
                "(.*)\\.yml$"
            ],
            "matchStrings": [
                "#.*https:\\/\\/github\\.com\/(?<depName>[^\\/]+\\/[^\\/]+)\\/(?<sourceType>(releases|tags)+).*\n.*[_|-|\\s](VERSION|version|Version):[\\s]*(?<currentValue>.*)"
            ],
            "datasourceTemplate": "github-{{{sourceType}}}"
        }
    ]
}