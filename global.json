{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":semanticCommits",
        "github>stonal-tech/renovate-config//jenkins-lib"
    ],
    "enabled": true,
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "rangeStrategy": "bump",
    "separateMinorPatch": true,
    "prConcurrentLimit": 2,
    "prHourlyLimit": 2,
    "prCreation": "not-pending",
    "timezone": "Europe/Paris",
    "vulnerabilityAlerts": {
        "addLabels": [
            "security"
        ],
        "prPriority": 10
    },
    "labels": [
        "dependencies",
        "renovate"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "prPriority": 2
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "prPriority": 1
        }
    ]
}