{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>stonal-tech/renovate-config//ts-base"
    ],
    "packageRules": [
        {
            "description": "Automerging all minors and patch",
            "matchManagers": [
              "maven"
            ],
            "matchUpdateTypes": [
              "minor",
              "patch"
            ],
            "addLabels": [
              "autoapprove"
            ]
          }
    ]
}